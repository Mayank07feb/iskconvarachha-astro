---
import Layout from "../layouts/Layout.astro";
import { seoData } from "../data/seoData.js";
const { meta_title, meta_description, current_page } = seoData.terms;
---

<Layout
  title={meta_title}
  description={meta_description}
  currentPage={current_page}
>
  <!-- HERO -->
  <section
    class="relative pt-28 pb-16 md:pt-36 md:pb-24 overflow-hidden bg-gradient-to-br from-background-light via-white to-background-section"
  >
    <!-- Decorative background -->
    <div class="absolute inset-0 opacity-5">
      <div
        class="absolute top-10 left-10 w-72 h-72 bg-primary rounded-full blur-3xl"
      >
      </div>
      <div
        class="absolute bottom-10 right-10 w-96 h-96 bg-secondary rounded-full blur-3xl"
      >
      </div>
    </div>

    <!-- Animated floating elements -->
    <div
      class="absolute top-1/4 left-5 w-8 h-8 bg-primary/10 rounded-full animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-1/3 right-1/4 w-12 h-12 bg-secondary/10 rounded-full animate-pulse delay-1000"
    >
    </div>

    <div class="max-w-6xl mx-auto px-4 text-center relative z-10">
      <div
        class="inline-flex items-center gap-2 mb-5 px-5 py-2 bg-primary/10 rounded-full"
      >
        <span class="material-icons text-primary text-sm">gavel</span>
        <span class="text-primary font-semibold text-sm">Legal Information</span
        >
      </div>

      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        <span class="block text-gray-900">Terms & Conditions</span>
        <span
          class="text-transparent bg-gradient-to-r from-secondary to-primary bg-clip-text"
          >ISKCON Varachha, Surat</span
        >
      </h1>

      <p class="text-lg text-brand-gray max-w-3xl mx-auto mb-8">
        These Terms govern your access to and use of the ISKCON Varachha
        website, services, and spiritual resources.
      </p>

      <div
        class="flex items-center justify-center gap-4 text-sm text-brand-gray"
      >
        <span class="flex items-center gap-2">
          <span class="material-icons text-primary text-sm">update</span>
          Last Updated: January 2025
        </span>
        <span class="h-4 w-px bg-brand-gray/20"></span>
        <span class="flex items-center gap-2">
          <span class="material-icons text-primary text-sm">verified</span>
          Please read carefully
        </span>
      </div>
    </div>
  </section>

  <!-- CONTENT -->
  <section
    class="py-16 md:py-24 bg-gradient-to-b from-white to-background-light/30"
  >
    <div class="max-w-6xl mx-auto px-4">
      <!-- Quick Navigation -->
      <div
        class="mb-12 bg-white rounded-2xl p-6 shadow-lg border border-brand-brown/5"
      >
        <h3
          class="text-xl font-bold text-brand-brown mb-4 flex items-center gap-2"
        >
          <span class="material-icons">list</span>
          Quick Navigation
        </h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
          <a
            href="#acceptance"
            class="text-sm px-4 py-2 bg-background-light text-brand-brown rounded-lg hover:bg-primary/10 hover:text-primary transition-all duration-300 flex items-center gap-2"
          >
            <span class="material-icons text-xs">done</span>
            Acceptance
          </a>
          <a
            href="#purpose"
            class="text-sm px-4 py-2 bg-background-light text-brand-brown rounded-lg hover:bg-primary/10 hover:text-primary transition-all duration-300 flex items-center gap-2"
          >
            <span class="material-icons text-xs">flag</span>
            Purpose
          </a>
          <a
            href="#donations"
            class="text-sm px-4 py-2 bg-background-light text-brand-brown rounded-lg hover:bg-primary/10 hover:text-primary transition-all duration-300 flex items-center gap-2"
          >
            <span class="material-icons text-xs">payments</span>
            Donations
          </a>
          <a
            href="#privacy"
            class="text-sm px-4 py-2 bg-background-light text-brand-brown rounded-lg hover:bg-primary/10 hover:text-primary transition-all duration-300 flex items-center gap-2"
          >
            <span class="material-icons text-xs">privacy_tip</span>
            Privacy
          </a>
        </div>
      </div>

      <div class="space-y-8">
        <!-- Card 1 -->
        <div
          id="acceptance"
          class="group bg-white rounded-3xl p-6 md:p-8 shadow-lg border border-brand-brown/5 hover:shadow-xl transition-all duration-500 hover:-translate-y-1"
        >
          <div class="flex items-start gap-4">
            <div
              class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary/10 to-primary/5 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300"
            >
              <span class="material-icons text-primary">check_circle</span>
            </div>
            <div class="flex-1">
              <div class="flex items-center justify-between mb-3">
                <h2 class="text-2xl font-bold text-brand-brown">
                  1. Acceptance of Terms
                </h2>
                <span
                  class="hidden md:inline-flex items-center gap-1 px-3 py-1 bg-primary/10 text-primary text-sm font-semibold rounded-full"
                >
                  <span class="material-icons text-sm">warning</span>
                  Required
                </span>
              </div>
              <p class="text-brand-gray leading-relaxed mb-4">
                By accessing or using this website, you acknowledge that you
                have read, understood, and agree to be bound by these Terms &
                Conditions. If you do not agree, you must discontinue use
                immediately.
              </p>
              <div class="flex items-center gap-3 text-sm text-brand-gray">
                <span class="material-icons text-primary text-sm">info</span>
                <span
                  >Your continued use constitutes acceptance of these terms</span
                >
              </div>
            </div>
          </div>
        </div>

        <!-- Card 2 -->
        <div
          id="purpose"
          class="group bg-white rounded-3xl p-6 md:p-8 shadow-lg border border-brand-brown/5 hover:shadow-xl transition-all duration-500 hover:-translate-y-1"
        >
          <div class="flex items-start gap-4">
            <div
              class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-secondary/10 to-secondary/5 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300"
            >
              <span class="material-icons text-secondary">flag</span>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-brand-brown mb-3">
                2. Purpose of the Website
              </h2>
              <p class="text-brand-gray leading-relaxed mb-6">
                This website is operated by ISKCON Varachha, Surat to provide
                spiritual knowledge, temple information, event updates,
                educational resources, and community outreach programs aligned
                with Vedic principles.
              </p>
              <div class="grid sm:grid-cols-2 gap-4">
                <div
                  class="flex items-center gap-3 p-3 bg-background-light rounded-xl"
                >
                  <span class="material-icons text-primary">temple_hindu</span>
                  <span class="text-sm text-brand-gray">Temple Information</span
                  >
                </div>
                <div
                  class="flex items-center gap-3 p-3 bg-background-light rounded-xl"
                >
                  <span class="material-icons text-primary">menu_book</span>
                  <span class="text-sm text-brand-gray"
                    >Spiritual Resources</span
                  >
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Card 3 -->
        <div
          class="group bg-white rounded-3xl p-6 md:p-8 shadow-lg border border-brand-brown/5 hover:shadow-xl transition-all duration-500 hover:-translate-y-1"
        >
          <div class="flex items-start gap-4">
            <div
              class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary/10 to-primary/5 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300"
            >
              <span class="material-icons text-primary">person</span>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-brand-brown mb-3">
                3. User Responsibilities
              </h2>
              <ul class="space-y-4 text-brand-gray">
                <li class="flex items-start gap-3">
                  <span class="material-icons text-primary text-sm mt-1"
                    >verified</span
                  >
                  <span
                    >Use the website only for lawful and respectful purposes</span
                  >
                </li>
                <li class="flex items-start gap-3">
                  <span class="material-icons text-primary text-sm mt-1"
                    >verified</span
                  >
                  <span
                    >Do not disrupt, damage, or interfere with website security</span
                  >
                </li>
                <li class="flex items-start gap-3">
                  <span class="material-icons text-primary text-sm mt-1"
                    >verified</span
                  >
                  <span>Do not misuse spiritual or copyrighted content</span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="material-icons text-primary text-sm mt-1"
                    >verified</span
                  >
                  <span
                    >Respect cultural and religious sentiments of all users</span
                  >
                </li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Card 4 -->
        <div
          class="group bg-white rounded-3xl p-6 md:p-8 shadow-lg border border-brand-brown/5 hover:shadow-xl transition-all duration-500 hover:-translate-y-1"
        >
          <div class="flex items-start gap-4">
            <div
              class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-secondary/10 to-secondary/5 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300"
            >
              <span class="material-icons text-secondary">copyright</span>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-brand-brown mb-3">
                4. Intellectual Property
              </h2>
              <p class="text-brand-gray leading-relaxed mb-4">
                All content including text, scriptures, images, videos,
                graphics, and logos are protected under applicable intellectual
                property laws. Any reproduction, modification, or redistribution
                without written consent is prohibited.
              </p>
              <div class="flex flex-wrap gap-3">
                <span
                  class="px-3 py-1 bg-primary/10 text-primary text-sm rounded-full"
                  >Copyright Â© ISKCON</span
                >
                <span
                  class="px-3 py-1 bg-secondary/10 text-secondary text-sm rounded-full"
                  >All Rights Reserved</span
                >
                <span
                  class="px-3 py-1 bg-brand-brown/10 text-brand-brown text-sm rounded-full"
                  >Protected Content</span
                >
              </div>
            </div>
          </div>
        </div>

        <!-- Card 5 -->
        <div
          id="donations"
          class="group bg-white rounded-3xl p-6 md:p-8 shadow-lg border border-brand-brown/5 hover:shadow-xl transition-all duration-500 hover:-translate-y-1"
        >
          <div class="flex items-start gap-4">
            <div
              class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary/10 to-primary/5 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300"
            >
              <span class="material-icons text-primary">payments</span>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-brand-brown mb-3">
                5. Donations & Services
              </h2>
              <p class="text-brand-gray leading-relaxed mb-4">
                Donations made through this platform are voluntary and
                non-refundable unless otherwise stated. ISKCON Varachha reserves
                the right to allocate donations in accordance with temple
                activities and charitable objectives.
              </p>
              <div class="bg-background-light rounded-xl p-4">
                <div class="flex items-center gap-3 text-sm text-brand-gray">
                  <span class="material-icons text-primary">info</span>
                  <span
                    >Donations are tax-exempt under Section 80G of the Income
                    Tax Act</span
                  >
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Card 6 -->
        <div
          class="group bg-white rounded-3xl p-6 md:p-8 shadow-lg border border-brand-brown/5 hover:shadow-xl transition-all duration-500 hover:-translate-y-1"
        >
          <div class="flex items-start gap-4">
            <div
              class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-secondary/10 to-secondary/5 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300"
            >
              <span class="material-icons text-secondary">shield</span>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-brand-brown mb-3">
                6. Limitation of Liability
              </h2>
              <p class="text-brand-gray leading-relaxed">
                ISKCON Varachha shall not be liable for any direct, indirect,
                incidental, or consequential damages arising from your use of
                this website or reliance on any information provided herein. The
                spiritual content is provided for educational purposes only.
              </p>
            </div>
          </div>
        </div>

        <!-- Card 7 -->
        <div
          id="privacy"
          class="group bg-white rounded-3xl p-6 md:p-8 shadow-lg border border-brand-brown/5 hover:shadow-xl transition-all duration-500 hover:-translate-y-1"
        >
          <div class="flex items-start gap-4">
            <div
              class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary/10 to-primary/5 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300"
            >
              <span class="material-icons text-primary">update</span>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-brand-brown mb-3">
                7. Amendments & Updates
              </h2>
              <p class="text-brand-gray leading-relaxed mb-4">
                These Terms may be updated periodically without prior notice.
                Continued use of the website constitutes acceptance of the
                revised terms. Significant changes will be communicated through
                website announcements.
              </p>
              <div class="flex items-center gap-4 text-sm text-brand-gray">
                <span class="flex items-center gap-2">
                  <span class="material-icons text-primary text-sm"
                    >notifications</span
                  >
                  Check back regularly for updates
                </span>
              </div>
            </div>
          </div>
        </div>

        <!-- Card 8 -->
        <div
          class="group bg-white rounded-3xl p-6 md:p-8 shadow-lg border border-brand-brown/5 hover:shadow-xl transition-all duration-500 hover:-translate-y-1"
        >
          <div class="flex items-start gap-4">
            <div
              class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-secondary/10 to-secondary/5 rounded-2xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300"
            >
              <span class="material-icons text-secondary">contact_support</span>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-brand-brown mb-3">
                8. Contact Information
              </h2>
              <p class="text-brand-gray leading-relaxed mb-6">
                For any questions regarding these Terms & Conditions, please
                contact the temple administration through our official channels.
              </p>
              <a
                href="/contact"
                class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-xl font-semibold hover:bg-primary-hover transition-all duration-300"
              >
                <span class="material-icons">mail</span>
                Contact Temple Office
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Final Note -->
      <div
        class="mt-12 bg-gradient-to-r from-primary/5 to-secondary/5 rounded-2xl p-8 border border-primary/10"
      >
        <div
          class="flex flex-col md:flex-row items-center justify-between gap-6"
        >
          <div class="text-center md:text-left">
            <h3
              class="text-xl font-bold text-brand-brown mb-2 flex items-center gap-2"
            >
              <span class="material-icons text-primary">description</span>
              Acknowledgement Required
            </h3>
            <p class="text-brand-gray">
              By using this website, you confirm that you have read and agree to
              all the terms and conditions stated above.
            </p>
          </div>
          <div class="flex items-center gap-3">
            <span class="material-icons text-primary">check</span>
            <span class="font-semibold text-brand-brown"
              >I Understand & Agree</span
            >
          </div>
        </div>
      </div>

      <!-- Last Updated -->
      <div class="mt-12 pt-8 border-t border-brand-brown/10">
        <div
          class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-brand-gray"
        >
          <div class="flex items-center gap-4">
            <span class="flex items-center gap-2">
              <span class="material-icons text-primary">update</span>
              Last Updated: <strong class="text-brand-brown ml-1"
                >January 2025</strong
              >
            </span>
            <span class="hidden md:block h-4 w-px bg-brand-gray/20"></span>
            <span class="flex items-center gap-2">
              <span class="material-icons text-primary">policy</span>
              Also review our <a
                href="/privacy"
                class="text-primary hover:underline">Privacy Policy</a
              >
            </span>
          </div>
          <div>
            <button
              onclick="window.scrollTo({top: 0, behavior: 'smooth'})"
              class="flex items-center gap-2 px-4 py-2 text-sm text-brand-gray hover:text-primary transition-colors"
            >
              <span class="material-icons text-sm">arrow_upward</span>
              Back to Top
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
